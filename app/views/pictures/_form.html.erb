<%= form_with(model: picture, local: true, :multipart => true) do |form| %>
  <div class="content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="image">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
