<%= form_with(model: @picture, local: true, :multipart => true) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>

    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
