<p id="notice"><%= notice %></p>

<h1>一覧画面</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.content %></td>
      <td><%= image_tag (picture.image.url) if picture.image && picture.image.url %></td>
      <td><%= link_to '詳細', picture %></td>
       <td><%= link_to '編集', edit_picture_path(picture) %></td>
       <td><%= link_to '削除', picture, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '投稿する', new_picture_path %>
